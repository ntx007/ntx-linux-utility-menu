#!/bin/bash

# Wrapper to launch NTX Command Center via 'ntxmenu'
try_exec() {
    local cand="$1"
    shift
    if [[ -x "$cand" ]]; then
        exec "$cand" "$@"
    fi
}

try_exec "/usr/local/bin/ntx-utility-menu" "$@"
try_exec "/usr/local/bin/ntx-utility-menu.sh" "$@"
try_exec "/usr/bin/ntx-utility-menu" "$@"
try_exec "/usr/bin/ntx-utility-menu.sh" "$@"

# Fallback to the directory where this wrapper lives (symlink-safe)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
try_exec "${SCRIPT_DIR}/ntx-utility-menu.sh" "$@"
try_exec "${SCRIPT_DIR}/ntx-utility-menu" "$@"

echo "Cannot find ntx-utility-menu script. Checked /usr/local/bin, /usr/bin, and ${SCRIPT_DIR}."
exit 1
